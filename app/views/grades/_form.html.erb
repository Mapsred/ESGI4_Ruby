<% if @grade.errors.any? %>
  <div class="callout callout-danger">
    <h4>Error during the object save</h4>

    <p>There is one or more errors for this object :</p>
    <ul>
      <% @grade.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @grade) do |form| %>
    <div class="form-group">
      <%= form.label :name, 'Grade name' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :alias, 'Grade alias' %>
      <%= form.text_field :alias, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :description, 'Description' %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>
  <%= form.submit 'Save', class: 'btn btn-primary' %>
<% end %>