<div class="row">
  <div class="col-md-12">
    <h1>Grades</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <% if @grades.any? %>
      <table class="table" id="dataTable" style="width: 100%;">
        <thead>
        <tr>
          <th>Name</th>
          <th>Alias</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @grades.each do |grade| %>
          <tr>
            <td><%= grade.name %></td>
            <td><%= grade.alias %></td>
            <td><%= grade.description %></td>
            <td>
              <div class="btn-group pull-right" role="group">
                <a href="<%= grade_path grade %>" class="btn btn-success">
                  <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Details
                </a>
                <% if user_signed_in? %>
                  <a href="<%= edit_grade_path grade %>" class="btn btn-info">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
                  </a>
                  <%= link_to raw('<span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete'),
                              grade,
                              method: :delete,
                              data: {
                                  confirm: 'Are you sure you want to delete this grade ?'
                              },
                              class: 'btn btn-danger'
                  %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
        <tfoot>
        <tr>
          <th>Name</th>
          <th>Alias</th>
          <th>Description</th>
          <th class="disabled">Actions</th>
        </tr>
        </tfoot>
      </table>
    <% else %>
      <div class="alert alert-info" role="alert">
        No grade created for the moment.
      </div>
    <% end %>
  </div>
</div>

<% if user_signed_in? %>
  <div class="row">
    <div class="col-md-6 col-md-offset-6">
      <a href="<%= new_grade_path %>" type="button" class="btn btn-default pull-right">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add a grade
      </a>
    </div>
  </div>
<% end %>