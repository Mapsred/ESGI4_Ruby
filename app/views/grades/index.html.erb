<div class="row">
  <div class="col-md-12">
    <h1>Les grades</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <% if @grades.any? %>
      <table class="table">
        <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Alias</th>
          <th>Description</th>
          <th>
            <div class="col-md-2 col-md-offset-10">Action</div>
          </th>
        </tr>
        </thead>
        <tbody>
        <% @grades.each do |grade| %>
          <tr>
            <div class="row">
              <td><%= grade.id %></td>
              <td><%= grade.name %></td>
              <td><%= grade.alias %></td>
              <td><%= grade.description %></td>
              <div class="col-md-2 col-md-offset-10">
                <td>
                  <div class="btn-group pull-right" role="group" aria-label="...">
                    <a href="#" type="button" class="btn btn-default" title="Editer">
                      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                    <a href="#" type="button" class="btn btn-default" title="Supprimer">
                      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </a>
                  </div>
                </td>
              </div>
            </div>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="alert alert-warning" role="alert">
        <strong>Warning!</strong> Aucun grade enregistr√© pour le moment
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-6">
    <a href="<%= new_grade_path %>" type="button" class="btn btn-default pull-right" title="Ajouter un grade">
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Ajouter un grade
    </a>
  </div>
</div>
