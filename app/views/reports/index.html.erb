<div class="row">
  <div class="col-md-12">
    <% if @reports.any? %>
      <table class="table" id="dataTable" style="width: 100%;">
        <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Description</th>
          <th>Astronaut</th>
          <th>Action</th>
        </tr>
        </thead>
        <tbody>
        <% @reports.each do |report| %>
          <tr>
            <td><%= report.id %></td>
            <td><%= report.name %></td>
            <td><%= report.description %></td>
            <td><%= report.astronaut.nil? ? 'Non défini' : report.astronaut.name %></td>
            <td>
              <div class="btn-group pull-right" role="group">
                <a href="<%= report_path report %>" class="btn btn-success">
                  <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Détails
                </a>

                <% if user_signed_in? %>
                  <a href="<%= edit_report_path report %>" class="btn btn-info">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Éditer
                  </a>

                  <%= link_to raw('<span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Supprimer'),
                              report,
                              method: :delete,
                              data: {
                                  confirm: 'Êtes-vous sûr(e) de vouloir supprimer ce rapport ?'
                              },
                              class: 'btn btn-danger'
                  %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
        <tfoot>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Description</th>
          <th>Astronaut</th>
          <th class="disabled">Action</th>
        </tr>
        </tfoot>

      </table>
    <% else %>
      <div class="alert alert-warning" role="alert">
        <strong>Warning!</strong> Aucun rapport enregistré pour le moment
      </div>
    <% end %>
  </div>
</div>

<% if user_signed_in? %>
  <div class="row">
    <div class="col-md-6 col-md-offset-6">
      <%= link_to(new_report_path, class: 'btn btn-success pull-right', title: 'Ajouter un rapport') do %>
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Ajouter un rapport
      <% end %>
    </div>
  </div>
<% end %>