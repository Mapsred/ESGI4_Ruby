<div class="row">
  <div class="col-md-12">
    <% if @reports.any? %>
      <table class="table">
        <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Description</th>
          <th>Astronaut</th>
          <th>
            <div class="col-md-2 col-md-offset-10">Action</div>
          </th>
        </tr>
        </thead>
        <tbody>
        <% @reports.each do |report| %>
          <tr>
            <div class="row">
              <td><%= report.id %></td>
              <td><%= report.name %></td>
              <td><%= report.description %></td>
              <td>
                <% astronaut = report.astronaut %>
                <% if astronaut.nil? %>
                  Non défini.
                <% else %>
                  <%= report.astronaut.name %>
                <% end %>
              </td>
              <div class="col-md-2 col-md-offset-10">
                <td>
                  <div class="btn-group pull-right" role="group" aria-label="...">

                    <%= link_to(report, class: 'btn btn-info', title: 'Voir') do %>
                      <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Voir
                    <% end %>

                    <%= link_to(edit_report_path(report), class: 'btn btn-warning', title: 'Editer') do %>
                      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editer
                    <% end %>

                    <%= link_to(report,
                                method: :delete,
                                data: {
                                    confirm: 'Êtes-vous sûr(e) de vouloir supprimer ce rapport ?'
                                },
                                class: 'btn btn-danger',
                                title: 'Supprimer'
                        ) do %>
                      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Supprimer
                    <% end %>
                  </div>
                </td>
              </div>
            </div>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="alert alert-warning" role="alert">
        <strong>Warning!</strong> Aucun rapport enregistré pour le moment
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-6">
    <%= link_to(new_report_path, class: 'btn btn-success pull-right', title: 'Ajouter un rapport') do %>
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Ajouter un rapport
    <% end %>
  </div>
</div>