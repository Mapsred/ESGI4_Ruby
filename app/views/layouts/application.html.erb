<!doctype html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <title>RubyPlanet</title>
</head>
<body>
<% is_planet_path = active_link(planets_path) || active_link(new_planet_path) %>
<% is_astronaut_path = active_link(astronauts_path) || active_link(new_astronaut_path) %>
<% is_grade_path = active_link(grades_path) || active_link(new_grade_path) %>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to "RubyPlanet", home_path, :class => "navbar-brand" %>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li <%= active_link(home_path) ? 'class=active' : '' %>>
          <%= link_to "Home", home_path %>
        </li>
        <li <%= is_planet_path ? 'class=active' : '' %>>
          <%= link_to "PlanÃ¨tes", planets_path %>
        </li>
        <li <%= is_astronaut_path ? 'class=active' : '' %>>
          <%= link_to "Astronautes", astronauts_path %>
        </li>
        <li <%= is_grade_path ? 'class=active' : '' %>>
          <%= link_to "Grades", grades_path %>
        </li>
      </ul>
    </div>
  </div>
</nav>
<div class="container">
  <% flash.each do |name, msg| %>
    <div class="alert alert-<%= name %>">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span></button>
      <%= msg %>
    </div>
  <% end %>

  <%= yield %>
</div> <!-- /.container --></body>
</html>