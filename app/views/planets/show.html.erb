<div class="nav-header">
  <a class="btn btn-primary btn-sm" href="<%= planets_path %>"><span class="glyphicon glyphicon-chevron-left"></span>
    Back</a>
  <h3>Planet <%= @planet.name %></h3>
</div>

<div class="well">
  <div class="row">
    <div class="col-md-12">
      <label class="col-sm-2">Name</label>
      <span><%= @planet.name %></span>
    </div>

    <div class="col-md-12">
      <label class="col-sm-2">Description</label>
      <span><%= @planet.description %></span>
    </div>

    <div class="col-md-12">
      <% photo = @planet.photo %>
    <% if photo.nil? %>
        <span>No photo</span>
    <% else %>
        <label class="col-sm-2">Image</label>
        <img class="planet-photo" src="<%= url_for(photo) %>" alt="Planet Photo">
    <% end %>
    </div>

    <div class="col-md-12">
      <label class="col-sm-2">Created at</label>
      <span><%= @planet.created_at.strftime('%d/%m/%Y') %></span>
    </div>

  </div>
</div>