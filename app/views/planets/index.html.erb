<div class="row">
  <div class="col-md-12">
    <h1>Planets</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <% if @planets.any? %>
      <table class="table" id="dataTable" style="width: 100%;">
        <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>
            <div class="col-md-2 col-md-offset-10">Actions</div>
          </th>
        </tr>
        </thead>
        <tbody>
        <% @planets.each do |planet| %>
          <tr>
            <td><%= planet.id %></td>
            <td><%= planet.name %></td>
            <td>
              <div class="btn-group pull-right">
                <a href="<%= planet_path planet %>" class="btn btn-success">
                  <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Details
                </a>
                <% if user_signed_in? %>
                <a href="<%= edit_planet_path planet %>" class="btn btn-info">
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
                </a>
                <%= link_to raw('<span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete'),
                            planet,
                            method: :delete,
                            data: {
                                confirm: 'Are you sure you want to delete this planet ?'
                            },
                            class: 'btn btn-danger'
                %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
        <tfoot>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th class="disabled">Actions</th>
        </tr>
        </tfoot>
      </table>
    <% else %>
      <div class="alert alert-info" role="alert">
        No planet created for the moment.
      </div>
    <% end %>
  </div>
</div>

<% if user_signed_in? %>
<div class="row">
  <div class="col-md-6 col-md-offset-6">
    <a href="<%= new_planet_path %>" type="button" class="btn btn-default pull-right">
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add a planet
    </a>
  </div>
</div>
<% end %>