<div class="row">
  <div class="col-md-12">
    <h1>Astronaute</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <% if @astronauts.any? %>
      <table class="table" id="dataTable" style="width: 100%;">
        <thead>
        <tr>
          <th>ID</th>
          <th>Nom</th>
          <th>Grade</th>
          <th>Planet</th>
          <th>Action</th>
        </tr>
        </thead>
        <tbody>
        <% @astronauts.each do |astronaut| %>
          <tr>
            <td><%= astronaut.id %></td>
            <td><%= astronaut.name %></td>
            <td>
              <% if astronaut.grade.nil? %>
                &empty;
              <% else %>
                <%= astronaut.grade.name.nil? ? '&empty;' : astronaut.grade.name %>
              <% end %>
            </td>
            <td>
              <% if astronaut.planet.nil? %>
                &empty;
              <% else %>
                <%= astronaut.planet.name.nil? ? '&empty;' : astronaut.planet.name %>
              <% end %>
            </td>
            <td>
              <div class="btn-group pull-right">
                <a href="<%= astronaut_path astronaut %>" class="btn btn-success">
                  <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Détails
                </a>
                <% if user_signed_in? %>
                  <a href="<%= edit_astronaut_path astronaut %>" class="btn btn-info">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Éditer
                  </a>
                  <%= link_to raw('<span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Supprimer'),
                              astronaut,
                              method: :delete,
                              data: {
                                  confirm: 'Êtes-vous sûr(e) de vouloir supprimer cet astronaute ?'
                              },
                              class: 'btn btn-danger'
                  %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
        <tfoot>
        <tr>
          <th>ID</th>
          <th>Nom</th>
          <th>Grade</th>
          <th>Planet</th>
          <th class="disabled">Action</th>
        </tr>
        </tfoot>
      </table>
    <% else %>
      <div class="alert alert-info" role="alert">
        Aucun astronaute. :(
      </div>
    <% end %>
  </div>
</div>

<% if user_signed_in? %>
  <div class="row">
    <div class="col-md-6 col-md-offset-6">
      <a href="<%= new_astronaut_path %>" type="button" class="btn btn-default pull-right">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Ajouter un astronaute
      </a>
    </div>
  </div>
<% end %>